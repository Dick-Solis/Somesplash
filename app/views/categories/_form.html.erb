<%=form_with model: category, class: "flex flex-column gap-4 mb-4" do |f|%>
      <div class="input">
        <%=f.label :name, class: "content-xs overline"%>
        <div class="<%= @category.errors.full_messages[0] && 'border-error'%> input__container">
          <%=f.text_field :name, placeholder: 'Technology', class: "input__content"%>
        </div>        
      </div>

      <div class="input">
        <%=f.label :description, class: "content-xs overline"%>
        <div class="input__container">
          <%=f.text_area :description, placeholder: 'Exploring our complicated relationship with technology...', class: "input__content"%>
        </div>
      </div>

      <div>
        <%=f.label :cover, class: "content-xs overline"%>
        <div>
          <%=f.file_field :cover, accept: "image/png, image/jpeg"%>
        </div>
      </div>

      <%=f.submit class: "button button--secondary"%>
    <%end%>